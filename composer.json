{
  "name": "robiningelbrecht/phpunit-coverage-check",
  "description": "Check the code coverage using the clover or text report of phpunit",
  "keywords": [
    "Testing",
    "PHP",
    "phpunit",
    "Unittest",
    "CI",
    "Code coverage"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Robin Ingelbrecht",
      "email": "ingelbrecht_robin@hotmail.com"
    },
    {
      "name": "Richard Regeer",
      "email": "rich2309@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "adhocore/cli": "^0.9.0",
    "myclabs/php-enum": "^1.8"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.2",
    "phpunit/phpunit": "^9.5",
    "spatie/phpunit-snapshot-assertions": "^4.2"
  },
  "bin": ["bin/coverage-checker"],
  "autoload": {
    "psr-4": {
      "PHPUnitCoverageChecker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "lint:fix": "php-cs-fixer fix"
  }
}
